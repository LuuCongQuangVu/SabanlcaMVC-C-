@model IEnumerable<Sablanca.Models.SanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="content container-fluid">
    <h2>Sản phẩm</h2>

    <p>
        @Html.ActionLink("Thêm", "Create")
    </p>
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(model => model.MaSP)</th>
            <th>
                @Html.DisplayNameFor(model => model.DanhMuc.TenDM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenSP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GiaBan)
            </th>
            <th>@Html.DisplayNameFor(model => model.MauSac)</th>
            <th>
                @Html.DisplayNameFor(model => model.AnhSP)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaSP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DanhMuc.TenDM)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenSP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GiaBan)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MauSac)
        </td>
        <td>
            @{
                string ImagePath = "~/wwwroot/AnhSP/" + item.AnhSP;
            }
            <img src="@Url.Content(ImagePath)" width="100" class="img-thumbnail" />
            <br />
            @*@Html.DisplayFor(modelItem => item.AnhSP)*@
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id = item.MaSP }) |
            @Html.ActionLink("Chi tiết", "Details", new { id = item.MaSP }) |
            @Html.ActionLink("Xóa", "Delete", new { id = item.MaSP })
        </td>
    </tr>
        }

    </table>
</div>
