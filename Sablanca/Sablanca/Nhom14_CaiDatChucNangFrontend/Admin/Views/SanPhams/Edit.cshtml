                    <img id="output" class="img-rounded" width="200" height="200" src="@Url.Content(@ImagePath)" alt="Ảnh" />
                    <p class="text-left"><label for="ufile" style="cursor:pointer;">Chọn file ảnh</label></p>
                    <input name="ImageFile" id="ufile" type="file" style="display:none;" onchange="loadFile(event)" />
                    @Html.HiddenFor(model => model.AnhSP)
                    @*@Html.EditorFor(model => model.AnhSP, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.AnhSP, "", new { @class = "text-danger" })*@
