
@{
    ViewBag.Title = "Products";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content container-fluid">
    <!-- Page Header -->
    <div class="page-header">
        <div class="row">
            <div class="col">
                <h3 class="page-title">Quản lý sản phẩm</h3>
            </div>
            <div class="col-auto text-right">
                <a href="@Url.Action("Add_product","Home")"
                   class="btn btn-primary add-button ml-3">
                    <i class="fas fa-plus"></i>
                </a>
            </div>
        </div>
    </div>
    <!-- /Page Header -->

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-center mb-0 datatable">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Mã SP</th>
                                    <th>Mã DM</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Giá bán</th>
                                    <th>Giá giảm</th>
                                    <th>Màu sắc</th>
                                    <th>Chất liệu</th>
                                    <th>Loại dây đeo</th>
                                    <th>Kích thước</th>
                                    <th>Số ngăn</th>
                                    <th>Dòng</th>
                                    <th>Mô tả</th>
                                    <th>Ảnh</th>
                                    <th class="text-right">Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1</td>
                                    <td>0092</td>
                                    <td>03</td>
                                    <td>

                                        Túi đeo chéo họa tiết dập chỉ SD0092
                                    </td>
                                    <td>710.000đ</td>
                                    <td>785,000đ</td>
                                    <td>Be</td>
                                    <td>Da tổng hợp</td>
                                    <td>Kim Loại</td>
                                    <td>23*8*13</td>
                                    <td>1</td>
                                    <td>đi làm, đi chơi, đi tiệc</td>
                                    <td>
                                        - Thiết kế dập chỉ nổi tinh tế.<br>
                                        - Dáng nắp gập phối khóa xoay kim loại chắc chắn.<br>
                                        - Không gian túi 1 lớn chứa đủ các vật dụng cơ bản.<br>
                                        - Gam màu hiện đại, phù hợp với nhiều trang phục.
                                    </td>
                                    <td>
                                        <img src="~/Areas/Admin/assets/img/product/product-01.jpg"
                                             alt="Logo"
                                             width="30"
                                             height="30" />
                                    </td>
                                    <td class="text-right">
                                        <a href="@Url.Action("Edit_product","Home")"
                                           class="btn btn-sm bg-success-light mr-2">
                                            <i class="far fa-edit mr-1"></i>Sửa
                                        </a>
                                        <a data-id="40"
                                           href="javascript:void(0);"
                                           class="
                                btn btn-sm
                                bg-danger-light
                                mr-2
                                delete_review_comment
                              "
                                           data-toggle="modal"
                                           data-target="#exampleModal">
                                            <i class="far fa-trash-alt mr-1"></i> Xoá
                                        </a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade"
     id="exampleModal"
     tabindex="-1"
     role="dialog"
     aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Xác nhận?</h5>
                <button type="button"
                        class="close"
                        data-dismiss="modal"
                        aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">Bạn có muốn xoá bản ghi này?</div>
            <div class="modal-footer">
                <button type="button"
                        class="btn btn-secondary"
                        data-dismiss="modal">
                    Không
                </button>
                <button type="button" class="btn btn-primary">Đồng ý</button>
            </div>
        </div>
    </div>
</div>


