@model PagedList.IPagedList<Sablanca.Models.SanPham>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}
@*@{ Html.RenderPartial("_BreadcrumbLevelOne");}*@

<section class="inner-section shop-part">
    <div class="container">
        <div class="row content-reverse">
            <div class="col-lg-3">
                <div class="shop-widget-promo">
                    <a href="#"><img src="~/wwwroot/images/promo/shop/01.jpg" alt="promo" /></a>
                </div>
                <div class="shop-widget">
                    <h6 class="shop-widget-title">Lọc theo giá</h6>
                    <form>
                        <div class="shop-widget-group">
                            <input type="text" placeholder="Bắt đầu" /><input type="text"
                                                                              placeholder="Kết thúc" />
                        </div>
                        <button class="shop-widget-btn">
                            <i class="fas fa-search"></i><span>tìm</span>
                        </button>
                    </form>
                </div>
                <div class="shop-widget">
                    <h6 class="shop-widget-title">lọc theo danh mục</h6>
                    <form>
                        <ul class="shop-widget-list shop-widget-scroll">
                            <li>
                                <div class="shop-widget-content">
                                    <input type="checkbox" id="cate1" /><label for="cate1">Túi xách</label>
                                </div>
 <span class="shop-widget-number">(13)</span> 
</li>
<li>
    <div class="shop-widget-content">
        <input type="checkbox" id="cate1" /><label for="cate1">Ví</label>
    </div>
 <span class="shop-widget-number">(13)</span> 
</li>
<li>
    <div class="shop-widget-content">
        <input type="checkbox" id="cate1" /><label for="cate1">Balo</label>
    </div>
 <span class="shop-widget-number">(13)</span> 
</li>
                        </ul>
                        <button class="shop-widget-btn">
                            <i class="far fa-trash-alt"></i><span>Xoá bộ lọc</span>
                        </button>
                    </form>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="top-filter">
                            <div class="filter-short">
                                <label class="filter-label">Sắp xếp theo :</label><select class="form-select filter-select">
                                    <option selected>mặc định</option>
                                    <option value="3">mới nhất</option>
                                    <option value="1">giá từ thấp tới cao</option>
                                    <option value="2">giá từ cao tới thấp</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row row-cols-2 row-cols-md-3 row-cols-lg-3 row-cols-xl-4">
                    @foreach (var item in Model)
                    {
                        <div class="col">
                            <div class="product-card">
                                <div class="product-media">
                                    <img src="@Url.Content("~/wwwroot/AnhSP/" + item.AnhSP)"
                                         alt="product" width="100%" height="150px" class="img-responsive center-block" />
                                </div>
                                <div class="product-content">
                                    <h6 class="product-name">
                                        <a href="@Url.Action("Product", "Home", new { id = item.MaSP })">@item.TenSP</a>
                                    </h6>
                                    <h6 class="product-price">
                                        <span>@string.Format("{0:#,##}", item.GiaBan)đ</span>
                                    </h6>
                                    <button class="product-add" title="Thêm vào giỏ">
                                        <i class="fas fa-shopping-basket"></i><span>mua hàng</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="bottom-paginate">
                            <ul class="pagination">
                                <li class="page-item">
                                    <a class="page-link" href="#">
                                        <i class="fas fa-long-arrow-alt-left"></i>
                                    </a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link active" href="#">1</a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="#">2</a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="#">3</a>
                                </li>
                                <li class="page-item">...</li>
                                <li class="page-item">
                                    <a class="page-link" href="#">60</a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="#">
                                        <i class="fas fa-long-arrow-alt-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
